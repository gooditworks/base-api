{
  "name": "gooditworks_base_api",
  "version": "0.1.1",
  "description": "Gooditworks base project for GraphQL API",
  "repository": "https://github.com/gooditworks/base-api",
  "license": "MIT",
  "author": "Max Eliseev <mxseev@gmail.com>",
  "scripts": {
    "build": "concurrently -c green \"npm:build:*\"",
    "build:docs": "spectaql spectaql.yaml -t public/docs",
    "build:typescript": "tsc",
    "codegen": "graphql-codegen --config codegen.yml",
    "commit": "git add . && cz",
    "dev:local": "nodemon",
    "dev:vercel": "vercel dev",
    "postinstall": "npm run prisma:generate && sh ./scripts/add_base_remote.sh",
    "k6": "k6 run k6/tests/stability.js",
    "k6:stress:empty": "k6 run -q k6/tests/empty.js",
    "k6:stress:realistic": "k6 run -q k6/tests/realistic.js",
    "k6:stress:slow": "k6 run -q --log-output=none k6/tests/slow.js",
    "lint": "concurrently -c green \"npm:lint:*\"",
    "lint:base": "sh ./scripts/check_base_update.sh",
    "lint:ts": "eslint --ext .ts,.tsx .",
    "lint:typecheck": "tsc --noEmit",
    "migrate": "sh ./scripts/migrate.sh",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "release": "standard-version",
    "style:packagesort": "sort-package-json",
    "test": "concurrently -c green \"npm:test:*\"",
    "test:unit": "jest --silent"
  },
  "dependencies": {
    "@gooditworks/monitoring": "^1.3.0",
    "@graphql-tools/graphql-file-loader": "7.5.2",
    "@graphql-tools/load": "7.7.4",
    "@graphql-tools/schema": "8.5.1",
    "@graphql-tools/utils": "8.10.0",
    "@prisma/client": "3.15.2",
    "@vercel/node": "2.5.8",
    "apollo-server-core": "3.10.1",
    "apollo-server-errors": "3.3.1",
    "apollo-server-micro": "3.10.1",
    "apollo-server-plugin-base": "3.6.2",
    "dotenv": "16.0.1",
    "graphql": "16.6.0",
    "lodash": "4.17.21",
    "prisma": "3.15.2"
  },
  "devDependencies": {
    "@arkweid/lefthook": "0.7.7",
    "@commitlint/cli": "17.0.3",
    "@commitlint/config-conventional": "17.0.3",
    "@graphql-codegen/add": "3.2.1",
    "@graphql-codegen/cli": "2.11.6",
    "@graphql-codegen/typescript": "2.7.3",
    "@graphql-codegen/typescript-resolvers": "2.7.3",
    "@types/jest": "28.1.7",
    "@types/lodash": "4.14.183",
    "@types/micro": "7.3.7",
    "@typescript-eslint/eslint-plugin": "5.33.1",
    "@typescript-eslint/parser": "5.33.1",
    "commitizen": "4.2.5",
    "commitlint-plugin-function-rules": "1.7.1",
    "concurrently": "7.3.0",
    "cz-conventional-changelog": "3.3.0",
    "enhanced-resolve": "5.10.0",
    "eslint": "8.22.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-airbnb-typescript": "17.0.0",
    "eslint-plugin-jest": "27.0.1",
    "jest": "28.1.3",
    "jest-junit": "14.0.0",
    "micro": "9.4.1",
    "nodemon": "2.0.19",
    "prettier": "2.7.1",
    "sort-package-json": "1.57.0",
    "spectaql": "1.5.2",
    "standard-version": "9.5.0",
    "ts-jest": "28.0.8",
    "ts-node": "10.9.1",
    "typescript": "4.7.4"
  }
}
